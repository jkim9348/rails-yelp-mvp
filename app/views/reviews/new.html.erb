<div class="container">
  <h1>Add Review for <%= @restaurant.name %></h1>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Add a review", class: "btn btn-primary" %>
  <% end %>
  <div><i class="fas fa-arrow-circle-left"></i> <%= link_to "Back", restaurant_path(@restaurant) %></div>
  </div>
