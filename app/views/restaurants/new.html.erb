<div class="container">
  <h1>New Restaurant</h1>

  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address%>
    <%= f.input :phone_number %>
    <%= f.input :category %>
    <%= f.submit class: "btn btn-primary" %>

  <% end %>

  <div><i class="fas fa-arrow-circle-left"></i> <%= link_to "Back to all Restaurants", restaurants_path %></div>
</div>
