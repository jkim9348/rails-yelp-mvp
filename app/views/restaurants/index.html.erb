<div class="container center">
  <h1>All Restaurants</h1>

  <% @restaurants.each do |restaurant| %>
    <div>
      <%= link_to restaurant.name, restaurant_path(restaurant.id) %> <i class="fas fa-trash-alt"></i> <%= link_to "Delete", restaurant_path(restaurant.id), method: :delete %>
      </div>
  <% end %>
<br>
  <%= link_to new_restaurant_path do %>
    <i class="fas fa-plus-square"></i> Add new restaurant
  <% end %>
</div>
